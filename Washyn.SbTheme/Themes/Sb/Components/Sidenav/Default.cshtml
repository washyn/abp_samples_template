@using Volo.Abp.MultiTenancy
@using Volo.Abp.Users
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic.Themes.Basic.Components.Menu
@inject ICurrentTenant CurrentTenant
@inject ICurrentUser CurrentUser
<nav class="sb-sidenav accordion shadow-sm sb-sidenav-light" id="sidenavAccordion">
    <div class="sb-sidenav-menu">
        <div class="nav">
            @await Component.InvokeAsync(typeof(MainNavbarMenuViewComponent))
        </div>
    </div>
    <div class="sb-sidenav-footer">
        <div class="small">Logged in as:</div>
        @if (CurrentUser.TenantId != null)
        {
            <small><i>@CurrentTenant.Name</i>\</small>@CurrentUser.UserName
        }
        else
        {
            @CurrentUser.UserName
        }
    </div>
</nav>
