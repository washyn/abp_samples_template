@model Acme.Samples.Pages.Components.DatoSolSetting.UpdateDatosSolSettingViewModel


<abp-script src="/Pages/Components/DatoSolSetting/Default.js" />


<h4>Configuracion de datos SOL</h4>
<hr>
<abp-card>
    <abp-card-header>
        <abp-card-title>Datos SOL</abp-card-title>
    </abp-card-header>
    <abp-card-body>
        <form method="post" id="formSol">
            <abp-row>
                <abp-column>
                    <abp-input asp-for="User"></abp-input>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <input type="text" class="form-control" autocomplete="new-password" asp-for="Password" />
                            <button class="btn btn-secondary" type="button" id="PasswordVisibilityButton"><i class="fa fa-eye-slash" aria-hidden="true"></i></button>
                        </div>
                        <span asp-validation-for="Password"></span>
                    </div>
                </abp-column>
            </abp-row>
            <hr class="mt-2">
            <abp-button button-type="Primary" type="submit">Guardar</abp-button>
        </form>
    </abp-card-body>
</abp-card>