@model Acme.Samples.Pages.Components.ImagesWidget.FilesViewModel
<table class="table table-sm table-bordered table-striped">
    <thead>
    <tr>
        <th>Archivo</th>
        <th>Descripcion</th>
        <th>Opciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Files)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.Description</td>
            <td class="py-0 align-middle text-center">
                <div class="btn-group btn-group-sm">
                    @if (item.CanBeDownload)
                    {
                        <a asp-controller="Attachment" asp-action="Download" asp-route-id="3F2504E0-4F89-11D3-9A0C-0305E82C3301" target="_blank" class="btn btn-outline-info" type="button">
                            <em class="fas fa-file-download"></em>
                        </a>
                    }
                    @if (item.CanBeDelete)
                    {
                        <button class="btn btn-outline-danger" type="button" onclick="deleteTableFile(this)">
                            <em class="fas fa-trash"></em>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }
    @if (Model.CanBeAdd)
    {
        <tr>
            <td>
                <input class="form-control form-control-sm" type="file" name="file" required="required"/>
            </td>
            <td>
                <input class="form-control form-control-sm" type="text" name="description" required="required"/>
            </td>
            <td>
                <button class="btn btn-sm btn-outline-success uploadButton" type="button">Subir</button>
            </td>
        </tr>
    }
    </tbody>
</table>