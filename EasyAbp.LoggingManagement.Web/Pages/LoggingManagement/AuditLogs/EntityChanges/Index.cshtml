<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Entity Changes"]</abp-card-title>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <form data-ajaxForm="true" asp-page="Index" id="formQuery">
            @* <abp-row> *@
            @*     <div class="input-group mb-3"> *@
            @*         <input type="search" class="form-control" name="entityId" placeholder="Buscar por id"> *@
            @*         <button class="btn btn-light border" type="button" id="searchButton"><i class="fa fa-search text-secondary"></i></button> *@
            @*     </div> *@
            @* </abp-row> *@
            <abp-row>
                <abp-column><abp-input asp-for="Filter.EntityId"></abp-input></abp-column>
                @* <abp-column><abp-input asp-for="Filter.EntityTypeFullName"></abp-input></abp-column> *@
                <abp-column>
                    <label asp-for="Filter.EntityTypeFullName"></label>
                    <select asp-for="Filter.EntityTypeFullName"
                            class="auto-complete-select form-select"
                            data-autocomplete-api-url="/api/logging-management/entity-type"
                            data-autocomplete-display-property="name"
                            data-autocomplete-value-property="name"
                            data-autocomplete-items-property="items"
                            data-autocomplete-filter-param-name="filter"
                            data-autocomplete-allow-clear="true">
                    </select>
                </abp-column>
            </abp-row>
            <abp-row>
                <abp-column>
                    <abp-row>
                        <abp-column>
                            <div class="d-grid">
                                <abp-button id="search-button" button-type="Outline_Primary" text="@L["Search"].Value"/>
                            </div>
                        </abp-column>
                        <abp-column>
                            <div class="d-grid">
                                <abp-button id="clear-button" button-type="Outline_Warning" text="@L["Clear"].Value"/>
                            </div>
                        </abp-column>
                    </abp-row>
                </abp-column>
            </abp-row>
        </form>
        <abp-table striped-rows="true" id="EntityChangesTable" class="nowrap">
        </abp-table>
    </abp-card-body>
</abp-card>